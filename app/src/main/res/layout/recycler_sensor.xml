<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="sensor"
            type="a248.kotlinoid.model.SensorEntity"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="16dp">
        <TextView
            android:id="@+id/sensor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@{sensor.title}"
            tools:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <!--TextView
            android:id="@+id/sensor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/sensor_title"
            android:layout_toEndOf="@id/sensor_title"
            android:text="@{Integer.toString(sensor.uuid)}"
            tools:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            /-->
        <TextView
            android:id="@+id/sensor_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sensor_title"
            android:layout_marginTop="8dp"
            android:layout_marginRight="72dp"
            android:layout_marginEnd="72dp"
            android:text="@{sensor.desc}"
            tools:text="@string/app_name"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"/>
        <!--<ImageButton-->
            <!--android:id="@+id/sensor_delete"-->
            <!--android:layout_width="36dp"-->
            <!--android:layout_height="36dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--app:srcCompat="@mipmap/ic_delete"-->
            <!--android:tint="#434343"-->
            <!--android:background="@null"/>-->
    </RelativeLayout>
</layout>